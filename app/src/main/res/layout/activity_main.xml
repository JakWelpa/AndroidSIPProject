<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jakub.welpa.seminaryproject.androidsipproject.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login:"
        android:id="@+id/textViewLogin"
        android:layout_alignBottom="@+id/editTextLogin"
        android:layout_alignEnd="@+id/textViewHaslo" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextLogin"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textViewDomena" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Haslo:"
        android:id="@+id/textViewHaslo"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/editTextLogin"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextHaslo"
        android:layout_below="@+id/textViewLogin"
        android:layout_alignStart="@+id/editTextLogin" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Domena:"
        android:id="@+id/textViewDomena"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/editTextHaslo"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDomena"
        android:layout_below="@+id/editTextHaslo"
        android:layout_toEndOf="@+id/textViewDomena" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Port:"
        android:id="@+id/textViewPort"
        android:layout_alignBottom="@+id/editText4"
        android:layout_alignStart="@+id/textViewLogin" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_below="@+id/editTextDomena"
        android:layout_alignStart="@+id/editTextDomena" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KOMUNIKATY"
        android:id="@+id/textViewKomunikat"
        android:layout_alignBaseline="@+id/editTextDomena"
        android:layout_alignBottom="@+id/editTextDomena"
        android:layout_alignEnd="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REJESTRUJ"
        android:id="@+id/button"
        android:layout_alignTop="@+id/textViewLogin"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZADZWON"
        android:id="@+id/buttonZadzwon"
        android:layout_below="@+id/textViewPort"
        android:layout_alignParentStart="true"
        android:layout_marginTop="89dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rozlacz"
        android:id="@+id/buttonRozlacz"
        android:layout_alignTop="@+id/buttonZadzwon"
        android:layout_alignStart="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zadzwon do : "
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textViewPort" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_above="@+id/buttonRozlacz"
        android:layout_toEndOf="@+id/buttonZadzwon" />


</RelativeLayout>
