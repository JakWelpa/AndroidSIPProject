<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jakub.welpa.seminaryproject.androidsipproject.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login:"
        android:id="@+id/textViewLogin"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextLogin"
        android:layout_below="@+id/textViewLogin"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textViewLogin" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Haslo:"
        android:id="@+id/textViewHaslo"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/editTextLogin"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextHaslo"
        android:layout_below="@+id/textViewHaslo"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textViewHaslo" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Domena:"
        android:id="@+id/textViewDomena"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/editTextHaslo"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDomena"
        android:layout_below="@+id/textViewDomena"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textViewDomena" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Port:"
        android:id="@+id/textViewPort"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/editTextDomena"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_below="@+id/textViewPort"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textViewPort" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KOMUNIKATY"
        android:id="@+id/textViewKomunikat"
        android:layout_marginEnd="34dp"
        android:layout_above="@+id/editTextLogin"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REJESTRUJ"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/textViewDomena"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZADZWON"
        android:id="@+id/button2"
        android:layout_below="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />


</RelativeLayout>
